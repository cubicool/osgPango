#ifndef OSGPANGO_VERSION
#define OSGPANGO_VERSION

#include <osgPango/Export>

extern "C" {

#define OSGPANGO_MAJOR_VERSION 2
#define OSGPANGO_MINOR_VERSION 0
#define OSGPANGO_PATCH_VERSION 0

#define OSGPANGO_MIN_VERSION_REQUIRED(MAJOR, MINOR, PATCH) ((OSGPANGO_MAJOR_VERSION>MAJOR) || (OSGPANGO_MAJOR_VERSION==MAJOR && (OSGPANGO_MINOR_VERSION>MINOR || (OSGPANGO_MINOR_VERSION==MINOR && OSGPANGO_PATCH_VERSION>=PATCH))))
#define OSGPANGO_VERSION_LESS_THAN(MAJOR, MINOR, PATCH) ((OSGPANGO_MAJOR_VERSION<MAJOR) || (OSGPANGO_MAJOR_VERSION==MAJOR && (OSGPANGO_MINOR_VERSION<MINOR || (OSGPANGO_MINOR_VERSION==MINOR && OSGPANGO_PATCH_VERSION<PATCH))))
#define OSGPANGO_VERSION_LESS_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGPANGO_MAJOR_VERSION<MAJOR) || (OSGPANGO_MAJOR_VERSION==MAJOR && (OSGPANGO_MINOR_VERSION<MINOR || (OSGPANGO_MINOR_VERSION==MINOR && OSGPANGO_PATCH_VERSION<=PATCH))))
#define OSGPANGO_VERSION_GREATER_THAN(MAJOR, MINOR, PATCH) ((OSGPANGO_MAJOR_VERSION>MAJOR) || (OSGPANGO_MAJOR_VERSION==MAJOR && (OSGPANGO_MINOR_VERSION>MINOR || (OSGPANGO_MINOR_VERSION==MINOR && OSGPANGO_PATCH_VERSION>PATCH))))
#define OSGPANGO_VERSION_GREATER_OR_EQUAL(MAJOR, MINOR, PATCH) ((OSGPANGO_MAJOR_VERSION>MAJOR) || (OSGPANGO_MAJOR_VERSION==MAJOR && (OSGPANGO_MINOR_VERSION>MINOR || (OSGPANGO_MINOR_VERSION==MINOR && OSGPANGO_PATCH_VERSION>=PATCH))))

}

#endif

