#ifndef OSGPANGO_LABEL
#define OSGPANGO_LABEL

#include <osgWidget/Window>
#include <osgPango/Text>

namespace osgPango {

class OSGPANGO_EXPORT Label: public osgWidget::Widget {
public:
	META_Object(osgPango, Label);

	Label(
		const std::string& = "",
		Font*              = 0,
		GlyphEffectsMethod = GLYPH_EFFECTS_METHOD_DEFAULT
	);

	Label(const Label&, const osg::CopyOp&);

	virtual ~Label() {
	}

	virtual void parented   (osgWidget::Window*);
	virtual void unparented (osgWidget::Window*);
	virtual void positioned ();

	// Call this method after making any updates to the interal Text object;
	// unfortunately, there is no way to avoid this.
	void textUpdated();

	Text* getText() {
		return _text.get();
	}

	const Text* getText() const {
		return _text.get();
	}

protected:
	osg::ref_ptr<Text> _text;

	unsigned int _textIndex;
};

}

#endif
